<h1>Blog App</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Comments</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for post <- @posts do %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>

        <td>
        <span class="show" ><%= link "Show", to: Routes.post_path(@conn, :show, post) %></span>
        </td>
        <td>
        <span class="edit"><%= link "Edit", to: Routes.post_path(@conn, :edit, post) %></span>
        </td>
        <td>
        <span class="delete"><%= link "Delete", to: Routes.post_path(@conn, :delete, post), method: :delete, data: [confirm: "Are you sure?"] %></span>
        </td>
      </td>
            <td><%= get_comments_count(post.id) %></td>

    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Post", to: Routes.post_path(@conn, :new) %></span>
